.nav
  box-sizing border-box
  background rgba(255,255,255,0.8)
  display  none
  height 100%
  left 0
  margin 0 auto
  padding 10px 40px
  position fixed
  transition transform .3s linear 0s
  top 0
  width 90%
  z-index 100
  &__background
    background-color #333
    display none
    height 100%
    left 0
    opacity 0
    position fixed
    top 0
    transition all 0.3s linear 0s
    width 100%
  &__checkbox
    display none
    &:checked
      & ~ .nav
        display block
      & ~ .nav__icon
        position fixed
        &::before
          box-shadow transparent 0 0 0
          transform rotate(45deg) translate3d(6px, 11px, 0)
        &::after
          transform: rotate(-45deg) translate3d(6px, -11px, 0);
      & ~ .nav__background
        opacity: 0.5;
        z-index: 99;
        display: block;
  &__icon
    background rgba(255,255,255,0.8)
    border-radius 0 0 10px 0
    cursor pointer
    display block
    height 30px
    left 0
    margin 4px 0 0 4px
    position fixed
    top 0
    width 30px
    z-index 101
    &::before
      box-shadow #000 0 12px 0
      width 30px
      height 6px
      background #000
      display block
      content ''
      position absolute
      transition box-shadow 0.2s linear, transform 0.2s 0.2s
    &::after
      bottom 0
      width 30px
      height 6px
      background #000
      display block
      content ''
      position absolute
      transition box-shadow 0.2s linear, transform 0.2s 0.2s
  &__list
    display block
    & a
      text-decoration none
