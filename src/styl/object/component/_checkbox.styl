// ==========================================================================
// Component Check Box
// ==========================================================================
.c-checkbox
  border-radius 5px
  box-sizing border-box
  display inline-block
  padding 1px 4px 1px 22px
  position relative
  transition background-color .2s linear
  vertical-align middle
  +tm-set-child((background-color checkbox__label__background) (color checkbox__label-text))
    {block}
  &:after
    border 2px solid
    border-radius 5px
    content ''
    display block
    height 16px
    left 3px
    margin-top -9px
    position absolute
    top 50%
    transition border-color .2s linear
    width 16px
    +tm-set-child(border-color checkbox__checkbox)
      {block}
  &:before
    border-bottom 3px solid
    border-right 3px solid
    content ''
    display block
    height 9px
    left 8px
    margin-top -6px
    opacity 0
    position absolute
    top 50%
    transform rotate(45deg)
    transition opacity .2s linear
    width 5px
    +tm-set-child(border-color checkbox__check-mark)
      {block}
    input:checked + &
      opacity 1
  &:hover
    +tm-set-child(background-color checkbox__label__background--hover)
      {block}
    &:after
      +tm-set-child(border-color checkbox__checkbox--hover)
        {block}